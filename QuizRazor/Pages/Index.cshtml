@page
@model QuizRazor.Pages.IndexModel
@using QuizRazor.Components

<StatystykiQuizu />
@{
    ViewData["Title"] = "System Quizów";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">🎯 System Quizów</h1>

    @if (Model.Quizy == null || Model.Quizy.Count == 0)
    {
        <div class="alert alert-warning text-center">
            <h4>Brak dostępnych quizów</h4>
            <p>Najpierw dodaj quizy używając aplikacji konsolowej.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var quiz in Model.Quizy)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@quiz.Nazwa</h5>
                            <p class="card-text">@quiz.Opis</p>
                            <p class="text-muted">
                                <small>Liczba pytań: @quiz.Pytania.Count</small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/Quiz?id=@quiz.Id" class="btn btn-primary w-100">
                                Rozpocznij Quiz
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-5px);
    }
</style>