@page
@model QuizRazor.Pages.QuizModel
@{
    ViewData["Title"] = Model.Quiz?.Nazwa ?? "Quiz";
}

<div class="container mt-5">
    @if (Model.Quiz == null)
    {
        <div class="alert alert-danger">
            <h4>Quiz nie został znaleziony</h4>
            <a href="/" class="btn btn-primary">Powrót do listy quizów</a>
        </div>
    }
    else if (Model.CzyZakonczony)
    {
        <div class="card shadow">
            <div class="card-body text-center">
                <h2>🎉 Quiz Zakończony!</h2>
                <h3 class="mt-4">Twój wynik: @Model.Wynik / @Model.Quiz.Pytania.Count</h3>

                @{
                    var procent = (double)Model.Wynik / Model.Quiz.Pytania.Count * 100;
                    var kolor = procent >= 80 ? "success" : procent >= 50 ? "warning" : "danger";
                }

                <div class="progress mt-3" style="height: 30px;">
                    <div class="progress-bar bg-@kolor" style="width: @procent%">
                        @procent.ToString("F0")%
                    </div>
                </div>

                <a href="/" class="btn btn-primary btn-lg mt-4">Powrót do listy quizów</a>
            </div>
        </div>
    }
    else
    {
        <h1 class="text-center mb-4">@Model.Quiz.Nazwa</h1>
        <p class="text-center text-muted mb-4">@Model.Quiz.Opis</p>

        <form method="post">
            <input type="hidden" name="QuizId" value="@Model.Quiz.Id" />

            @for (int i = 0; i < Model.Quiz.Pytania.Count; i++)
            {
                var pytanie = Model.Quiz.Pytania[i];
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5>Pytanie @(i + 1) z @Model.Quiz.Pytania.Count</h5>
                    </div>
                    <div class="card-body">
                        <p class="lead">@pytanie.TrescPytania</p>

                        @foreach (var odpowiedz in pytanie.Odpowiedzi)
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio"
                                       name="Pytanie_@pytanie.Id"
                                       value="@odpowiedz.Id"
                                       id="odp_@odpowiedz.Id">
                                <label class="form-check-label" for="odp_@odpowiedz.Id">
                                    @odpowiedz.TrescOdpowiedzi
                                </label>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg">
                    Sprawdź Odpowiedzi
                </button>
            </div>
        </form>
    }
</div>

<style>
    .form-check-input:checked ~ .form-check-label {
        font-weight: bold;
    }
</style>